<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="10dp">

          <ImageView
              android:id="@+id/imageView"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_marginTop="30dp"
              android:layout_marginRight="15dp"
              />

          <LinearLayout
              android:id="@+id/name_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/imageView"
              android:orientation="horizontal">

          <TextView
              android:id="@+id/name"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#4B4B4B"
              android:layout_toRightOf="@id/imageView"/>

          <ImageView
              android:id="@+id/favourite_icon"
              android:layout_width="24dp"
              android:layout_height="18dp"
              android:layout_marginTop="5dp"
              android:layout_toRightOf="@id/name"
              android:tint="@color/colorPrimaryDark"
              android:src="@drawable/favourite_icon"/>
          </LinearLayout>
          <TextView
              android:id="@+id/age_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Age : "
              android:textColor="#8C8C8C"
              android:layout_below="@id/name_view"
              android:layout_toRightOf="@id/imageView"/>

          <TextView
              android:id="@+id/age"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#4B4B4B"
              android:layout_below="@id/name_view"
              android:layout_toRightOf="@id/age_view"/>


          <TextView
              android:id="@+id/resident_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Resident Country : "
              android:textColor="#8C8C8C"
              android:layout_below="@id/age_view"
              android:layout_toRightOf="@id/imageView"/>

          <TextView
              android:id="@+id/resident"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#4B4B4B"
              android:layout_below="@id/age_view"
              android:layout_toRightOf="@id/resident_view"/>

          <TextView
              android:id="@+id/host_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Hot City : "
              android:textColor="#8C8C8C"
              android:layout_below="@id/resident"
              android:layout_toRightOf="@id/imageView"/>

          <TextView
              android:id="@+id/host_city"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#4B4B4B"
              android:layout_below="@id/resident"
              android:layout_toRightOf="@id/host_view"/>

          <TextView
              android:id="@+id/university_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Hot University : "
              android:textColor="#8C8C8C"
              android:layout_below="@id/host_city"
              android:layout_toRightOf="@id/imageView"/>

          <TextView
              android:id="@+id/university"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#4B4B4B"
              android:layout_below="@id/host_city"
              android:layout_toRightOf="@id/university_view"/>


          <TextView
              android:id="@+id/address"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#4B4B4B"
              android:drawablePadding="3dp"
              android:layout_marginTop="10dp"
              android:paddingLeft="-5dp"
              android:layout_marginBottom="20dp"
              android:drawableLeft="@drawable/ic_location_on_black_24dp"
              android:layout_below="@id/university"/>

      </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>