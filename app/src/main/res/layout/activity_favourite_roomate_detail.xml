<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <!--  <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:tint="@android:color/white"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/RoomateDetail"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:gravity="center"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:tint="@android:color/white"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                android:src="@drawable/ic_back"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="60dp"
                            android:layout_height="120dp"
                            android:layout_marginRight="15dp"
                             />


                        <LinearLayout
                            android:id="@+id/name_view_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imageView"
                            android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#4B4B4B" />


                          <ImageView
                              android:id="@+id/fav_icon"
                              android:layout_width="24dp"
                              android:layout_height="24dp"
                              android:src="@drawable/favourite_icon"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/age_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name_view_layout"
                            android:layout_toRightOf="@id/imageView"
                            android:text="Age : "
                            android:textColor="#8C8C8C" />

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name_view_layout"
                            android:layout_toRightOf="@id/age_view"
                            android:textColor="#4B4B4B" />


                        <TextView
                            android:id="@+id/email_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/age"
                            android:layout_toRightOf="@id/imageView"
                            android:text="Email : "
                            android:textColor="#8C8C8C" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/age"
                            android:layout_toRightOf="@id/email_view"
                            android:textColor="#199E8A" />


                        <TextView
                            android:id="@+id/phone_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/email"
                            android:layout_toRightOf="@id/imageView"
                            android:text="Phone : "
                            android:textColor="#8C8C8C" />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/email"
                            android:layout_toRightOf="@id/phone_view"
                            android:textColor="#199E8A" />


                        <TextView
                            android:id="@+id/gender_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/phone"
                            android:layout_toRightOf="@id/imageView"
                            android:text="Gender : "
                            android:textColor="#8C8C8C" />

                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/phone"
                            android:layout_toRightOf="@id/gender_view"
                            android:textColor="#4B4B4B" />


                        <TextView
                            android:id="@+id/resident_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/gender"
                            android:text="Resident Country : "
                            android:textColor="#8C8C8C" />

                        <TextView
                            android:id="@+id/resident"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/gender"
                            android:layout_toRightOf="@id/resident_view"
                            android:textColor="#4B4B4B" />

                        <TextView
                            android:id="@+id/host_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/resident"
                            android:text="Hot City : "
                            android:textColor="#8C8C8C" />

                        <TextView
                            android:id="@+id/host_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/resident"
                            android:layout_toRightOf="@id/host_view"

                            android:textColor="#4B4B4B" />

                        <TextView
                            android:id="@+id/university_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/host_city"
                            android:text="Hot University : "
                            android:textColor="#8C8C8C" />

                        <TextView
                            android:id="@+id/university"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/host_city"
                            android:layout_toRightOf="@id/university_view"
                            android:textColor="#4B4B4B" />


                        <TextView
                            android:id="@+id/location_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/university"
                            android:text="Location : "
                            android:textColor="#8C8C8C" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/university"
                            android:layout_toRightOf="@id/location_view"
                            android:textColor="#4B4B4B" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/university"
                    android:layout_toRightOf="@id/location_view"
                    android:text="Interested Location"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textColor="#4B4B4B" />
<!--

                <fragment

                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="15dp"
                    tools:context=".views.activity.PropertyMap" />

-->


                <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_margin="15dp"
                    >

                </WebView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/university"
                    android:layout_toRightOf="@id/location_view"
                    android:text="@string/nearest_property"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textColor="#4B4B4B" />

                <!-- TODO: Update blank fragment layout -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>