<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
           >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@drawable/user"/>

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/imageView">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Jason"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8C8C8C"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="1/12/2020"/>

            <ImageView
                android:id="@+id/alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_alert"/>

            </LinearLayout>

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8C8C8C"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/name_layout"
                android:text="Type: Accommondation"/>

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8C8C8C"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/type"
                android:text="City: Voduz"/>

            <TextView
                android:id="@+id/university"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8C8C8C"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/city"
                android:text="University: Carvinus"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#4B4B4B"
            android:padding="10dp"
            android:layout_weight="1"
            android:maxLength="100"
            android:layout_gravity="center_vertical"
            android:text="@string/dummy_one"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#199E8A"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-20dp"
            android:layout_gravity="center_vertical"
            android:text="Know More"
            android:gravity="right"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#8C8C8C"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_like"
                android:drawablePadding="10dp"
                android:text="12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8C8C8C"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_comment"
                android:text="8"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#8C8C8C"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_share"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/edit_text_color" />


    </LinearLayout>